CompileFlags:
  Add:
    [
      -std=gnu++2c,
      -fmodules,
      -fmodule-file=std=/home/fleurs/Code/OpenStarbound/build/CMakeFiles/__cmake_cxx26.dir/std.pcm,
      -Wall,
      -Wextra,
      -Werror,
      -ferror-limit=0,
      -stdlib=libc++,
      -Wno-module-import-in-extern-c,
    ]
  Remove: [-Werror, -isystem, /nix/store/*]
  Compiler: clang++
  CompilationDatabase: "./build"

Index:
  Background: Build
  StandardLibrary: true
  External:
    File: /home/fleurs/Code/OpenStarbound/.clangd-index

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: [modernize*, performance*, bugprone*, hicpp*]
  Suppress:
    [
      "could not build module*",
      "module_not_built*",
      "bugprone-easily-swappable-parameters",
    ]
